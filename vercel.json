{
  "version": 2,
  "routes": [
    {
      "src": "/api/tts",
      "methods": ["GET", "POST", "OPTIONS"],
      "dest": "/api/tts.js"
    },
    {
      "src": "/api/voices",
      "methods": ["GET", "OPTIONS"],
      "dest": "/api/voices.js"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, x-auth-token" }
      ]
    }
  ]
}
